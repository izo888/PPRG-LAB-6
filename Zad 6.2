#include <iostream>
#include <string>
using namespace std;

// Definiujemy strukturę Student
struct Student {
    string name;      // imię ucznia
    int grades[4];    // oceny z 4 przedmiotów
};

int main() {
    const int NUM_STUDENTS = 6;  // liczba uczniów
    const int NUM_SUBJECTS = 4;  // liczba przedmiotów

    // Przedmioty 
    // 0 - Informatyka
    // 1 - Matematyka
    // 2 - Biologia
    // 3 - Język polski
    string subjects[NUM_SUBJECTS] = {"Informatyka", "Matematyka", "Biologia", "Jezyk polski"};

    Student students[NUM_STUDENTS];

    for (int i = 0; i < NUM_STUDENTS; i++) {
        cout << "Podaj imie ucznia nr " << (i + 1) << ": ";
        cin >> students[i].name;

        cout << "Podaj ocene z informatyki: ";
        cin >> students[i].grades[0];

        cout << "Podaj ocene z matematyki: ";
        cin >> students[i].grades[1];

        cout << "Podaj ocene z biologii: ";
        cin >> students[i].grades[2];

        cout << "Podaj ocene z jezyka polskiego: ";
        cin >> students[i].grades[3];

        cout << endl;
    }

    // Część odpowiadająca na zapytania
    while (true) {
        int studentNumber, subjectNumber;

        cout << "Podaj numer ucznia (1..6), 0 - koniec: ";
        cin >> studentNumber;

        if (studentNumber < 1 || studentNumber > NUM_STUDENTS) {
            // jeżeli spoza zakresu (np. 0 lub >6), kończymy pętlę
            break;
        }

        
        int indexStudent = studentNumber - 1;

        cout << "Podaj numer przedmiotu (1..4), 0 - koniec: ";
        cin >> subjectNumber;

        if (subjectNumber < 1 || subjectNumber > NUM_SUBJECTS) {
            // jeżeli spoza zakresu (np. 0 lub >4), kończymy pętlę
            break;
        }

        
        int indexSubject = subjectNumber - 1;

        
        cout << "Uczen: " << students[indexStudent].name << endl;
        cout << "Przedmiot: " << subjects[indexSubject] << endl;
        cout << "Ocena: " << students[indexStudent].grades[indexSubject] << endl;

        cout << endl;
    }

    cout << "Koniec programu." << endl;
    return 0;
}
